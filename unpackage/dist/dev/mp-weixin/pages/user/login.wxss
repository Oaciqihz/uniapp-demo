.content {
  width: 750rpx;
  position: relative;
}
.content .tips {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 30rpx;
  font-weight: 400;
  color: #999999;
  font-size: 28rpx;
}
.content .tips ._span {
  margin: 0 10rpx;
  color: #FF5152;
}
.content .or {
  width: 90%;
  margin: 0 auto;
  margin-top: 206rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}
.content .or ._p {
  width: 45%;
  height: 1px;
  background-color: #EEEEEE;
}
.content .btn {
  width: 694rpx;
  margin: 0 auto;
  margin-top: 32rpx;
  height: 108rpx;
  background: linear-gradient(90deg, #FF5152 0%, #FF8282 100%);
  box-shadow: 0rpx 8rpx 32rpx 0rpx rgba(197, 0, 0, 0.14);
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  font-weight: 400;
  color: #FFFFFF;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 38rpx;
}
.content .np {
  margin: 0 auto;
  margin-top: 80rpx;
  width: 90%;
  font-weight: 400;
  color: #FF5152;
  line-height: 33rpx;
  font-size: 28rpx;
}
.content .np ._p {
  width: 50%;
}
.content .inp {
  margin: 0 auto;
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: 400;
  padding-bottom: 15rpx;
  width: 90%;
  transition: 0.5s;
}
.content .inps {
  margin: 0 auto;
  margin-top: 80rpx;
  font-size: 32rpx;
  font-weight: 400;
  padding-bottom: 15rpx;
  width: 90%;
}
.content .phone {
  margin: 0 auto;
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
  width: 90%;
}
.content .top {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
}
.content .top .bg {
  cursor: pointer;
  width: 452rpx;
  height: auto;
}
.content .top .back {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content .top .back image {
  width: 52rpx;
  height: auto;
}
.content .title {
  padding-top: 268rpx;
  width: 90%;
  margin: 0 auto;
  font-size: 52rpx;
  font-weight: 600;
  font-weight: bold;
  color: #333333;
  line-height: 61rpx;
}

