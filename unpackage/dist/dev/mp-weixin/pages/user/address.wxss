.bit {
  width: 750rpx;
  min-height: 80vh;
  background-color: #f8f8f8;
}
.bit .ge {
  width: 750rpx;
  height: 20rpx;
}
.bit .box {
  box-sizing: border-box;
  padding: 28rpx;
  width: 90%;
  height: 220rpx;
  background: #FFFFFF;
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.bit .box .addname {
  color: #333333;
  line-height: 33rpx;
  font-weight: 600;
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1px solid #EEEEEE;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.bit .box .user {
  display: flex;
  align-items: center;
  color: #666666;
}
.bit .box .user .phone {
  margin: 0 20rpx;
  font-size: 24rpx;
  color: #666666;
}
.bit .box .user .pp {
  margin: 0 10rpx;
  font-size: 24rpx;
  color: #666666;
}
.bit .box .user .mor {
  padding: 0 10rpx;
  height: 28rpx;
  background: #FF5152;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 400;
  color: #FFFFFF;
  font-size: 20rpx;
}
.bit .gss {
  width: 750rpx;
  height: 100rpx;
