.classification .classbox {
  display: flex;
  align-items: center;
  padding-left: 38rpx;
}
.classification .classbox .box {
  flex-shrink: 0;
  margin-right: 80rpx;
  position: relative;
  height: 46rpx;
}
.classification .classbox .boxs {
  color: #FF5152;
}
.classification .classbox .boxs::before {
  content: '';
  background-color: #FF5152;
  z-index: 10;
