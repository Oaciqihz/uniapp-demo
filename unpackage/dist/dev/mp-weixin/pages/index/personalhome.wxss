.box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  width: 90%;
  height: 220rpx;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
}
.box .nr {
  flex: 0.95;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.box .nr .Value {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 10rpx;
}
.box .nr .lucks {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}
.box .nr .lucks ._span {
  color: #FF5152;
}
.box .nr .luck {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}
.box .nr .luck ._span {
  color: #5BB6EA;
}
.box .nr .title {
  height: 80rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 38rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.box .imgbox {
  width: 180rpx;
  height: 180rpx;
  box-shadow: 0rpx 8rpx 24rpx 0rpx rgba(0, 0, 0, 0.14);
  border-radius: 12rpx 12rpx 12rpx 12rpx;
  position: relative;
  overflow: hidden;
}
.top {
  margin-bottom: 36rpx;
  width: 750rpx;
  height: 342rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 0rpx 0rpx 40rpx 40rpx;
}
.top .user {
  padding-top: 46rpx;
  width: 90%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.top .user .userbox {
  display: flex;
  flex-direction: column;
  width: 350rpx;
}
.top .user .userbox .phpne {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}
.top .user .userbox .name {
  font-weight: 400;
  color: #666666;
  font-size: 24rpx;
}
.top .user .userbox .ex {
  font-weight: 400;
  color: #666666;
  font-size: 24rpx;
}
.top .user .btn {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  background: #5bb6ea;
  border-radius: 0rpx 58rpx 58rpx 58rpx;
  text-align: center;
  font-weight: 400;
  color: #FFFFFF;
  padding: 0 20rpx;
}
.top .tabs {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 30rpx;
}
.top .tabs .tabs_item {
  position: relative;
  width: 30%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  line-height: 33rpx;
}
.top .tabs .ctabs_item {
  color: #FF5152;
}
.top .tabs .ctabs_item::before {
  content: '';
  width: 86rpx;
  height: 0rpx;
  opacity: 1;
  border: 4rpx solid #FF5152;
  position: absolute;
  left: 50%;
  bottom: 10rpx;
  border-radius: 10rpx;
  margin-left: -43rpx;
}

